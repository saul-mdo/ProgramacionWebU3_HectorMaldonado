@model ZooPlanet.Models.ViewModels.EspecieViewModel

@{
    Layout = "_Layout";
}
<h1>Editar Especies</h1>

<form method="post" action="~/Admin/Home/Editar">
    <input type="hidden" asp-for="Especies.Id"/>
    <label>Nombre:</label>
    <input required type="text" asp-for="Especies.Especie"/>
    <label>Clase:</label>
    <select required asp-for="Especies.IdClase" asp-items="@(new SelectList(Model.Clases,"Id","Nombre"))">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input required type="text" asp-for="Especies.Habitat"/>
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Especies.Peso"/>
    <label>Tamaño:</label>
    <input type="number" step="0.1" asp-for="Especies.Tamaño"/>
    <label>Observaciones:</label>
    <textarea asp-for="Especies.Observaciones"></textarea>

    @Html.ValidationSummary()

    <input type="submit" value="Guardar" />
    <a href="~/Admin/Home">
        <input type="button" value="Cancelar" />
    </a>
</form>

